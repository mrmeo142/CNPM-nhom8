extends layout

block content
    h1=title 
    form(method='POST')
        div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='Name of menu item' name='name' required value=(undefined===food ? '' : food.name) )
        div.form-group
            label(for='price') Price:
            input#price.form-control(type='number', placeholder='Price' name='price' required value=(undefined===food ? '' : food.price) )
        div.form-group
            label(for='priceUnit') PriceUnit:
            input#priceUnit.form-control(type='text', placeholder='Price Unit(VND,USD,..)' name='priceUnit' required value=(undefined===food ? '' : food.priceUnit) )
        div.form-group
        label(for='description') description:
        textarea#description.form-control(placeholder='description' name='description' required)= undefined===food ? '' : food.description
        div.form-group
            label Catagory:
            div
                for catagory in catagories
                    div(style='display: inline; padding-right:10px;')
                        if catagory.checked
                            input.checkbox-input(type='checkbox', name='catagory', id=catagory._id, value=catagory._id, checked)
                        else
                            input.checkbox-input(type='checkbox', name='catagory', id=catagory._id, value=catagory._id)
                        label(for=catagory._id) &nbsp;#{catagory.name}
        button.btn.btn-primary(type='submit') Submit
    
    if errors
        ul 
            for error in errors 
                l1!=error.msg